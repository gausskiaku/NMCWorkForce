<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp" >

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentTop="true"
	     android:layout_centerHorizontal="true"
	     android:orientation="vertical"
	     android:padding="10dp" >

	     <TextView
	         android:id="@+id/titreTimeOut"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:gravity="center"
	         android:text="Time Out"
	         android:textColor="#0F9DE8"
	         android:textSize="35sp"
	         android:typeface="sans" />

	     <TextView
	         android:id="@+id/msgTimeOut"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:gravity="center"
	         android:text="Sorry! Username incorrect or server not available. Try again"
	         android:textColor="#FF0000"
	         android:textSize="26sp"
	         android:typeface="normal" />

	     <Button
	         android:id="@+id/btTimeOut"
	         android:layout_width="164dp"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="10dp"
	         android:background="@drawable/bouton"
	         android:padding="10dp"
	         android:text="Back"
	         android:textColor="#FFFFFF"
	         android:textSize="20sp"
	         android:textStyle="bold"
	         android:layout_gravity="center" />
	 </LinearLayout>

</RelativeLayout>
